<h1 class="text-center my-3">Lista de Todos os filmes Preferidos</h1>
<table class="table">
  <div class="row">
    <div class="col-12">
      <thead>
        <th>Codigo do filme</th>
        <th>Titulo</th>
        <th>Categoria</th>
        <th>GÃªnero</th>
        <th>link para snopse </th>
      </thead>
      <tbody>
        {{#each filmes}}
          <tr>
            <th>{{this.id_filme}}</th>
            <th>{{this.titulo}}</th>
            <th>{{this.categoria}}</th>
            <th>{{this.genero}}</th>
            <th>{{this.link_snopse }}</th>
            <th><a href="/update/{{this.id_filme}}">Editar<i
                  class="bi bi-pencil- square"
                ></i></a></th>
            <th>
              <form class="borde-0 m-0" action="/remover" method="POST">
                <input type="hidden" name="id_filme" value={{this.id_filme}} />
                <input type="submit" value="Excluir" name="Excluir" />
              </form></th>
          </tr>
        {{/each}}
      </tbody>
    </div>
  </div>
</table>